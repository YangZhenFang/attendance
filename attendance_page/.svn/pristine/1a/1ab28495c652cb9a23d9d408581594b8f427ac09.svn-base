<template>
    <div>


       <!--查询-->
        <span class="rightTitle">角色权限配置</span>
        <el-form :inline="true"  class="demo-form-inline el-form-small" ref="formInline">
            <el-form-item label="角色">
                <el-select v-model="role" placeholder="请选择" @change="changeRole" size="small">
                    <el-option
                        v-for="(item,index) in roles"
                        :label="item.rolename"
                        :value="item.id"
                    :key="index">
                    </el-option>
                </el-select>
            </el-form-item>
            <el-form-item v-if="btnShow">
                <el-button type="success" @click="handleSave" size="small" :disabled="show===false">保存</el-button>
                <el-button @click="resetChecked" size="small" :disabled="show===false">清空</el-button>
            </el-form-item>
        </el-form>
        <el-tree :data="dataTree" show-checkbox=""  default-expand-all="" node-key="id" ref="tree" highlight-current :props="defaultProps" class="treePos">
        </el-tree>
        <router-view></router-view>
    </div>
</template>

<script>
    export default {
        data(){
            return {
                defaultProps: {
                    children: 'children',
                    label: 'menu_name'
                },
                //dataTree:[],
                loading: true,
                role:'',
                show:true,
                roleNames:[],
                adminRoleId:''//系统角色id
            }
        },
        props: ['dataTree','defaultKey','roleid','btnShow','roles'],

        created: function () {
            this.getAdminRole();
        },
        mounted: function () {
          
        },
        components: {

        },

        computed: {
        },
        watch:{
            defaultKey:function(){
                this.$refs.tree.setCheckedNodes(this.defaultKey);
            },
            roleid:function(){
                this.role = this.roleid;
                // var a = JSON.parse(this.$getStore('adminData'));
                if(this.role===this.adminRoleId){
                    this.show = false;
                }else{
                    this.show = true;
                }
            },
            // roles:function(){
            //     console.log(this.roles);
            // }
        },
        methods: {
            handleSave(){
                var oldArr = [];
                var d = this.defaultKey;
                for(var i=0; i<d.length; i++){
                    oldArr.push(d[i].id);
                }//原始数据转数组

                var newArr = this.$refs.tree.getCheckedKeys();
                var addList = [];
                var delList = [];
                if(d.length===0){
                    delList = [];
                    addList = newArr;
                }else{
                    var  ar =oldArr.filter(function(n) {
                        return newArr.indexOf(n) != -1
                    });
                    addList =newArr.filter(function(n) {
                        return ar.indexOf(n) === -1
                    });
                    delList =oldArr.filter(function(n) {
                        return ar.indexOf(n) === -1
                    });
                }
                var params = {roleid:this.roleid,delList:delList,addList:addList};
                var _self = this;
                this.$http.post('/system/role/saverolemenu',params).then(function (res) {
                    if(res.data&&res.data.flag){
                        _self.$message({
                            message:'操作成功',
                            type:'success'
                        })
                    }
                }).catch(function (err) {
                    console.log(err)
                })
            },
            changeRole(){
                this.$emit('changeRole',this.role);
            },
            resetChecked() {
                this.$refs.tree.setCheckedKeys([]);
            },
            getAdminRole(){
                this.adminRoleId = '7ccabe10-3a17-11e7-b6fc-bbe623bbcad0';//先写成默认的
            }
        }
    }
</script>

