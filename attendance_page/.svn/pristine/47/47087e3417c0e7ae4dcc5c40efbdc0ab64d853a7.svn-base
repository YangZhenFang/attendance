          cancelButtonText: '取消',
          type: 'warning'
        }).then(() => {
          vm.$http.post('/business/policemanage/deletepolice', params).then(function (res) { //删除警员信息按钮
            console.log(res)
            if (res.data && res.data.success) {

              vm.$message({
                message: '删除成功',
                type: 'success'
              })
              vm._policeListData()
            } else {
              vm.$message({
                message: '删除失败',
                type: 'error'
              })
            }
          }).catch(function (err) {
            console.log(err)

          })
        }).catch(() => {

        })

      },
      /**
       * 更改是否登录状态
       * @param index
       * @param row
       */
      changeStatus(index, row){
        var _self = this;
        var status = row.login_flag == 0 ? '1' : row.login_flag == 1 ? '0' : '1';
        var params = {
          id: row.id,
          login_flag: status
        }
        this.$http.post('/business/policemanage/addoreditpolice', params).then(function (res) {
          console.log(res.data)
          if (res.data && res.data.success) {
            _self.$message({
              message: '状态更新成功',
              type: 'success'
            });
            //_self.getSysUserList();
          } else {
            _self.$message({
              message: '状态更改失败',
              type: 'error'
            });
          }
        }).catch(function (err) {
          console.log(err);
          _self.$message({
            message: '状态更改失败',
            type: 'error'
          });
        })
      },
      /**
       * 表单重置
       * @params {Object} formName 表单名称
       */
      resetForm(formName){
        this.$refs[formName].resetFields();
        if (formName == 'formInline') {
          this._policeListData()
        }
      },
      /**
       * 切换每页条数
       * @params {Number} val 每页条数
       */
      handleSizeChange(val) {
        this.tabPage.pageSize = val;
        this._policeListData();
      },
      /**
       * 切换页码
       * @params {Number} val 页码
       */
      handleCurrentChange(val) {
        this.tabPage.currentPage = val;
        this._policeListData();
      },
      /**
       * 获取归属机构组
       */
      _get_pl_org(){
        var vm = this
        vm.$http.get('/business/policemanage/getplorg').then(function (res) {
          if (res.data && res.data.flag) {
            vm.orgs = res.data.data
          }
        }).catch(function (err) {
          console.log(err)
        })
      },
      _get_atd_group(){
        var vm = this
        vm.$http.get('/business/policemanage/getatdgroup').then(function (res) {
          if (res.data && res.data.flag) {
            vm.atd_groups = res.data.data
          }
        }).catch(function (err) {
          console.log(err)
        })
      }
    }
  }
</script>

