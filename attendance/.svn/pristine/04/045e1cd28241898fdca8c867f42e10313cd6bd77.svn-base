/* jshint indent: 1 */

module.exports = function(sequelize, DataTypes) {
	return sequelize.define('sys_template', {
		id: {
			type: DataTypes.STRING(36),
			allowNull: false,
			primaryKey: true
		},
		template_name: {
			type: DataTypes.STRING(100),
			allowNull: true
		},
		template_type: {
			type: DataTypes.STRING(20),
			allowNull: true
		},
		create_user: {
			type: DataTypes.STRING(50),
			allowNull: true
		},
		create_date: {
			type: DataTypes.STRING(100),
			allowNull: true
		},
		is_use: {
			type: DataTypes.STRING(10),
			allowNull: true
		},
		approve: {
			type: DataTypes.STRING(50),
			allowNull: true,
			defaultValue: ''
		},
		send_person: {
			type: DataTypes.STRING(50),
			allowNull: true
		}
	}, {
		tableName: 'sys_template',
		timestamps: false,
		freezeTableName: true
	});
};
